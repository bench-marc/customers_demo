<div class="container mx-auto mt-8 p-6 bg-white rounded-md shadow-md">
  <h2 class="text-2xl font-semibold mb-6">Customers</h2>

  <% @customers.each do |customer| %>
    <div class="bg-gray-100 p-4 mb-4 rounded-md">
      <h3 class="text-lg font-semibold mb-2"><%= link_to customer.username, customer_path(customer.id) %></h3>
      <p class="text-gray-700">Email: <%= customer.email %></p>
      <p class="text-gray-700">Name: <%= "#{customer.firstname} #{customer.lastname}" %></p>
      <p class="text-gray-700">Birthdate: <%= customer.birthdate %></p>
    </div>
  <% end %>

  <% if @customers.empty? %>
    <p class="text-gray-700">No customers found.</p>
  <% end %>
</div>